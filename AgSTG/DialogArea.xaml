<UserControl x:Class="DialogArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgSTG"
             mc:Ignorable="d" 
             d:DesignHeight="448" d:DesignWidth="384"
             Loaded="UserControl_Loaded">
    <Grid>
        <Canvas>
            <Rectangle Width="256" Height="320" Canvas.Left="192" Canvas.Top="128" Opacity="0.75" Name="RC_EnemyIllustration"/>
            <Rectangle Width="256" Height="320" Canvas.Left="0" Canvas.Top="128" Opacity="1" Name="RC_PlayerIllustration"/>
        </Canvas>
        <Rectangle Width="192" Height="64" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,0,128" Name="RC_EnemyName"/>
        <Rectangle Height="128" VerticalAlignment="Bottom" Name="RC_Background">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#C0000080" x:Name="Color_Top" Offset="0"/>
                    <GradientStop Color="#00000080" x:Name="Color_Bottom" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label VerticalAlignment="Bottom" Height="128" Foreground="White" FontSize="18">
            <TextBlock TextWrapping="Wrap" Name="TB_DialogContent"></TextBlock>
        </Label>
    </Grid>
</UserControl>
