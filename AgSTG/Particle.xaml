<UserControl x:Class="Particle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AgSTG"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16"
             Loaded="UserControl_Loaded"
            >
    <UserControl.RenderTransform>
        <TransformGroup>
            <TranslateTransform x:Name="Me_Translate" x:FieldModifier="public"/>
            <RotateTransform x:Name="Me_Rotate" x:FieldModifier="public"/>
            <ScaleTransform x:Name="Me_Scale" x:FieldModifier="public"/>
        </TransformGroup>
    </UserControl.RenderTransform>
</UserControl>
