            <Grid.RenderTransform>
                <ScaleTransform x:Name="me_scale" CenterX="320" CenterY="240"/>
            </Grid.RenderTransform>
            <local:GamePage x:Name="GP">

            </local:GamePage>
        </Grid>
    </Grid>
</Window>
