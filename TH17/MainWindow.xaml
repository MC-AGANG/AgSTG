        xmlns:local="clr-namespace:TH17"
        mc:Ignorable="d"
        Title="AgSTG v3" Height="480" Width="640" WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        SizeChanged="Window_SizeChanged"
